<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.javastart.Mp3Player.Controller.IconfiedController">
   <children>
      <TextArea fx:id="messageTextArea" editable="false" prefHeight="10.0" stylesheets="@../css/style.css" />
      <HBox alignment="CENTER_LEFT">
          <Button id="previous" fx:id="previousButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" HBox.hgrow="NEVER" />
          <ToggleButton id="play" fx:id="playButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" HBox.hgrow="NEVER" />
          <Button id="next" fx:id="nextButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" HBox.hgrow="NEVER" />
         <ToggleButton id="playAllSongs" fx:id="playAllSongsButton" mnemonicParsing="false" />
         <ToggleButton id="replayPlaylist" fx:id="ReplayPlaylistButton" mnemonicParsing="false" />
         <ToggleButton id="loopSong" fx:id="loopSong" mnemonicParsing="false" />
         <ToggleButton id="random" fx:id="random" mnemonicParsing="false" text="R" />
         <VBox HBox.hgrow="NEVER">
            <children>
               <AnchorPane />
            </children>
         </VBox>
         <VBox HBox.hgrow="ALWAYS">
            <children>
               <AnchorPane>
                  <children>
                      <Slider id="progress" fx:id="progressSlider" layoutX="3.0" layoutY="1.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="14.0" prefWidth="152.0" />
                     <ToggleButton id="reverseTimeDisplay" fx:id="reverseTimeDisplay" layoutX="176.0" layoutY="-5.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" />
                  </children>
               </AnchorPane>
               <AnchorPane>
                  <children>
                     <Label fx:id="currentTimeLabel" layoutX="12.0" />
                     <Label fx:id="songLengthLabel" alignment="CENTER_RIGHT" layoutX="145.0" />
                  </children>
               </AnchorPane>
            </children>
         </VBox>
      </HBox>
   </children>
</VBox>
